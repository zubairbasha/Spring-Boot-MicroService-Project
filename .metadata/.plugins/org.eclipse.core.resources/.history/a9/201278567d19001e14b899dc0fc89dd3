spring:
  application:
    name: API-GATEWAY
  cloud:
    gateway:
      routes:
        - id: EMPLOYEE-SERVICE
          uri: lb://EMPLOYEE-SERVICE
          predicates:
            - Path=/api/employees
eureka:
  instance:
    client:
      serverUrl:
        defaultZone=http://localhost:8071/eureka
management:
  endpoints:
    web:
      exposure:
        include: '*'
server:
  port: 9071
    
        
        
      